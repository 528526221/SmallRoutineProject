@import "../movies/stars/stars-template.wxss";
@import "movie-cast/movie-cast-template.wxss";

.container-title {
  display: flex;
  flex-direction: column;
  height: 320rpx;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

/* 绝对定位中，在真机上还需要加上left、top 为0 */

.head-img-cover {
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 0;
  top: 0;
}

.movie-title {
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 48rpx;
  color: white;
}

.title-country {
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.title-country text {
  color: white;
  font-size: 28rpx;
  font-weight: 50;
}

.title-country-tip {
  margin: auto 10rpx;
}

.title-collect {
  margin-left: 30rpx;
  margin-top: 40rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.title-collect-num {
  font-size: 22rpx;
  color: #f21146;
  font-weight: 50;
}

.title-collect-tip {
  color: #666;
  font-size: 22rpx;
  margin-left: 15rpx;
  margin-right: 40rpx;
  font-weight: 50;
}

.container-direct {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.original-title {
  font-size: 28rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.movie-rating {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.rating-tip {
  color: #999;
  margin-right: 30rpx;
  white-space: nowrap;
  margin: auto 30rpx auto 0;
}

.horizon {
  background-color: #e5e5e5;
  height: 1px;
  width: 100%;
  margin-top: 40rpx;
}

.summary-container {
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  padding-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}

.summary {
  font-size: 24rpx;
  color: #333;
}

.summary-tip {
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 25rpx;
  padding-left: 10rpx;
}

.casts-container {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}

.casts-container-imgs {
  display: flex;
  flex-direction: row;
}

.movie-cover-image {
  position: absolute;
  top: 120rpx;
  width: 200rpx;
  height: 260rpx;
  left: 520rpx;
}
