.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: white;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  margin-left: 10rpx;
  margin-bottom: 10px;
}

.post-image{
  width: 100%;
  height: 340rpx;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin: 15px 10rpx 10px 10rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-like{
  flex-direction: row;
  margin-left: 10rpx;
  line-height: 24rpx;
  margin-bottom: 5px;
}
.post-like-image{
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-right: 10rpx;

}
.post-like-font{
  color: #666;
  margin-right: 20rpx;
  font-size: 24rpx;
  vertical-align: middle;
}