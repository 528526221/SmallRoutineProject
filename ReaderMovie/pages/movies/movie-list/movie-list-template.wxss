@import "../movie/movie-template.wxss";

.movie-list-container {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.movie-head {
  padding: 5rpx 20rpx 15rpx;
}

.slogan {
  font-size: 24rpx;
}

.more {
  float: right;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
}

.more-text {
  margin-right: 10rpx;
  font-size: 24rpx;
  color: #1f4ba5;
}

.movies-container {
  display: flex;
  flex-direction: row;
  margin: 0 auto;
}

