page {
  background: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name-container{
  display: flex;
  flex-direction: row;
  margin-top: 80rpx;
}
.name-container text{
  font-size: 28rpx;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius:50%;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: orchid;
}

.user-name text {
  font-size: 32rpx;
}

.moto-container {
  border: 1px solid #405f80;
  width: 200rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
  margin-top: 140rpx;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}

.btn-moto {
  background: transparent;
  width: 200rpx;
  height: 80rpx;
  font-size: 22rpx;
  text-align: center;
}
